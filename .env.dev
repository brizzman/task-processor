# App
APP_NAME=task-processor
APP_VERSION=1.0.0
APP_ENV=dev

# HTTP
HTTP_PORT=8080
HTTP_READ_TIMEOUT=1s
HTTP_WRITE_TIMEOUT=2s
HTTP_IDLE_TIMEOUT=5s

# Log
LOG_LEVEL=debug

# Postgres
POSTGRES_URL=postgres://postgres:postgres@localhost:5433/dev_db?sslmode=disable
POSTGRES_MAX_POOL_SIZE=5
POSTGRES_MIN_POOL_SIZE=1
POSTGRES_MAX_CONN_LIFETIME=5m
POSTGRES_MAX_CONN_IDLE_TIME=1m
POSTGRES_CONNECT_TIMEOUT=1s

# Redis
REDIS_ADDRESS=localhost:6380
REDIS_PASSWORD=
REDIS_DB=1
REDIS_POOL_SIZE=2
REDIS_DIAL_TIMEOUT=1s
REDIS_READ_TIMEOUT=500ms
REDIS_WRITE_TIMEOUT=500ms

# Worker pool
WORKER_POOL_MAX_WORKERS=2

# Rate limit
RATE_LIMIT_RPS=50

# Circuit breaker
CIRCUIT_BREAKER_ENABLED=true
CIRCUIT_BREAKER_MAX_REQUESTS=3
CIRCUIT_BREAKER_INTERVAL=30s
CIRCUIT_BREAKER_TIMEOUT=10s
CIRCUIT_BREAKER_CONSECUTIVE_FAILURES=3

# Healthcheck
HEALTHCHECK_TIMEOUT=1s

# Shutdown
SHUTDOWN_HTTP_TIMEOUT=2s
SHUTDOWN_HARD_PERIOD=2s
SHUTDOWN_READINESS_DRAIN=1s
